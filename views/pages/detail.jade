extends ../layout

block content
  .container
    .row
      .col-md-7.text-center
        img(src="#{movie.poster}", alt="#{movie.title}", width="auto", height="100%")
      .col-md-5
        .dl-horizantal
          dt 电影名字
          dd= movie.title  
          dt 导演
          dd= movie.doctor  
          dt 国家
          dd= movie.country  
          dt 语言
          dd= movie.language
          dt 上映年份
          dd= movie.year
          dt 简介
          dd= movie.summary      